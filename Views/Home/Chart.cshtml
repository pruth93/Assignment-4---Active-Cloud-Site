@model Smithsonian.Models.Rootobject

@{
    ViewData["Title"] = "Chart";
}

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script type="text/javascript">

    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2",
            animationEnabled: true,
            title: {
                text: "Simple Column Chart in ASP.NET MVC"
            },
            subtitles: [
                { text: "Try Resizing the Browser" }
            ],
            data: [
                {
                    type: "column", //change type to bar, line, area, pie, etc
                    dataPoints: [
                        { x: 10, y: 71 },
                        { x: 20, y: 55 },
                        { x: 30, y: 50 },
                        { x: 40, y: 65 },
                        { x: 50, y: 95 },
                        { x: 60, y: 68 },
                        { x: 70, y: 28 },
                        { x: 80, y: 34 },
                        { x: 90, y: 14 }
                    ]
                }
            ]
        });
        chart.render();
    };
</script>

<div id="page">
    <div id="header">
        <div class="title">Smithsonian Libraries</div>
    </div>
    <div id="bar">
        <div class="menuLink"><a asp-area="" asp-action="Index">HOME</a></div>
        <div class="menuLink"><a asp-area="" asp-action="About">ABOUT</a></div>
        <div class="menuLink"><a asp-area="" asp-action="Art">BOOKS</a></div>
        <div class="menuLink"><a asp-area="" asp-action="Chart">CHART</a></div>


    </div>
    <div id="pageContent">
        <div id="chartContainer"></div>
    </div>
</div>
<div id="footer"></div>
